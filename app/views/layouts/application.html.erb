<!DOCTYPE html>
<html>
  <head>
    <title>Mobiliaria</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">
        <img src="https://tabas.com.br/packs/media/images/logo-dark-e153277a7756ce181443a0227061abf3.svg" width="10%" alt="">
        </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link disabled" href="#">Home </a>
          <%= link_to 'Propriedades', properties_path, class:"nav-item nav-link active" %>
          <a class="nav-item nav-link disabled" href="#">Login</a>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
